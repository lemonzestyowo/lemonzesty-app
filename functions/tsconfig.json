{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "genkit": ["node_modules/genkit/lib/index.d.ts"],
      "genkit/*": ["node_modules/genkit/*/index.d.ts"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
